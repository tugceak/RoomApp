<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24sp">

    <TextView
        android:id="@+id/ageTw"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_marginEnd="54dp"
        android:text="22"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/firstTw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lastTw"
        app:layout_constraintTop_toTopOf="@+id/firstTw"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/firstTw"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_marginEnd="4dp"
        android:text="Tuğçe"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lastTw"
        app:layout_constraintStart_toEndOf="@+id/idTw"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="24dp"
        android:text="1"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/firstTw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastTw"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_marginEnd="2dp"
        android:text="Aksoy"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/firstTw"
        app:layout_constraintEnd_toStartOf="@+id/ageTw"
        app:layout_constraintStart_toEndOf="@+id/firstTw"
        app:layout_constraintTop_toTopOf="@+id/firstTw" />
</androidx.constraintlayout.widget.ConstraintLayout>